                            </Border>
                        </Grid>
                    </GroupBox>
                </TabItem>
                <TabItem Header="时间设置"></TabItem>
                <TabItem Header="记录管理"></TabItem>
            </TabControl>
        </Grid>


        
        <StackPanel Grid.Row="2" Name="stackMessageInfo" >
            <StackPanel.ScrollOwner>
                <ScrollViewer></ScrollViewer>
            </StackPanel.ScrollOwner>
           
        </StackPanel>
       
    </Grid>
</Window>
